<%= form_for(@task) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :title, placeholder:"タイトルを入力" %>
    日時 <%= f.datetime_select :due_at %>
    <%= f.text_area :content, placeholder:"説明を入力" %>
  </div>
  <%= f.submit "作成", class: "btn btn-primary" %>
<% end %>