<%= form_for(@task) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :title, placeholder: @task.title %>
    日時 <%= f.datetime_select :due_at, placeholder: @task.due_at %>
    <%= f.text_area :content, placeholder: @task.content %>
  </div>
  <%= f.submit "更新", class: "btn btn-primary" %>
<% end %>